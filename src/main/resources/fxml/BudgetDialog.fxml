<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.expensetracker.ui.BudgetDialogController"
      styleClass="dialog-container" spacing="10">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label fx:id="dialogTitle" styleClass="dialog-title"/>
    
    <!-- Form Fields -->
    <GridPane styleClass="form-grid" hgap="10" vgap="10">
        
        <!-- Category -->
        <Label text="Category:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
        <ComboBox fx:id="categoryComboBox" promptText="Select category" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                  styleClass="form-field"/>
        
        <!-- Amount -->
        <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
        <TextField fx:id="amountField" promptText="Enter budget amount" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                   styleClass="form-field"/>
        
        <!-- Month -->
        <Label text="Month:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
        <ComboBox fx:id="monthComboBox" promptText="Select month" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                  styleClass="form-field"/>
        
        <!-- Year -->
        <Label text="Year:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
        <Spinner fx:id="yearSpinner" editable="true" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                 styleClass="form-field"/>
        
    </GridPane>
    
    <!-- Buttons -->
    <HBox styleClass="button-container" spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button text="Save" onAction="#handleSave" styleClass="save-button" defaultButton="true"/>
    </HBox>
    
</VBox>
